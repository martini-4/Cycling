<div class="admin_user_index">
	<h1>承認待ちユーザー　一覧</h1>
	<table class="table ">
		<thead>
			<tr>
				<th>本名</th>
				<th>ニックネーム</th>
				<th>アドレス</th>
				<th>住所</th>
				<th>申し込み日時</th>
			</tr>
		</thead>
		<tbody>
			<% @user.each do |user| %>
			 		<tr>
						<td>
							<!-- 本名 -->
							<%= link_to user.lastname_kanji+user.firstname_kanji,edit_admin_new_user_path(user)  %>
						</td>
						<td>
							<!-- ニックネーム -->
							<%= link_to user.nickname, edit_admin_new_user_path(user) %>
						</td>

						<td>
							<!-- アドレス -->
							<%= user.email %>
						</td>
						<td>
							<!-- 住所 -->
							<%= user.address %>
						</td>
						<td>
							<!-- 申し込み日時の表示 -->
							<%= user.created_at.strftime('%Y年%m月%d日 %H時%M分') %>
						</td>
					</tr>
			<% end %>
		</tbody>
		<div class="">
			<%= paginate @user, class: "paginate" %>
		</div>
	</table>
</div>