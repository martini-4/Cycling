<div class="owner_show">
	<h1>マイページ</h1>
	<div class="owner_information">
		<div class="profile_picture_box">
			<%= attachment_image_tag @owner, :picture, fallback: "img2.png", class: 'profile_picture'  %>
		</div>
		<div class="">
			<p>ニックネーム</p>
			<%= @owner.nickname %>
		</div>
		<div class="">
			<%= link_to 'プロフィールの変更', edit_owner_owner_path %>
		</div>
		<div class="">
			<p>住所</p>
			<%= @owner.address %>
		</div>
		<div class="">
			<h4>振り込め先</h4>
			<p>支店名</p>
			<%= @owner.bank_stor_name %>
			<p>口座番号</p>
			<%= @owner.bank_account_number %>
			<p>口座名義</p>
			<%= @owner.bank_account_name %>
		</div>
		<div class="">
			<%= link_to '振り込め先の変更', edit_owner_payee_path(@owner.id) %>
		</div>
	<div class="owner_show_bicycle">
	</div>
	<div class="">
		<%= link_to '退会', unsubscribe_path, class: 'btn btn-danger' %>
</div>