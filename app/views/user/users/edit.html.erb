<div class="owner_edit">
	<h1>ユーザー情報の編集画面</h1>
	<div class="">
		<%= form_for(@user, url: user_user_path) do |user| %>
			<%= user.label :ニックネーム %><br>
			<%= user.text_field :nickname, class: 'owner_edit_form' %><br>
			<%= user.label :性別 %><br>
			<div class="owner_edit_form">
		      	<%= user.collection_select(:sex_id, Sex.all, :id, :sex, prompt: "") %><br>
		    </div>
		    <div class="owner_edit_form">
		    	<%= user.attachment_field :picture %>
		    </div>
	      	<div class="owner_edit_submit">
	      		<%= user.submit value="確定", class: "btn btn-primary" %>
	      	</div>
      	<% end %>
	</div>
</div>