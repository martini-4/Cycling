<div class="sign_in">
  <h1>ログイン</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :アドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "cycling@gmail.com" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :ログイン状況を維持する %>
      </div>
    <% end %>

    <div class="actions form_center">
      <%= f.submit "ログイン", class: 'btn btn-success' %>
    </div>
  <% end %>

  <%= render "owners/shared/links" %>
</div>